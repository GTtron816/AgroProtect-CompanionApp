<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Control">

    <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
        android:id="@+id/tags"
        android:layout_width="202dp"
        android:layout_height="400dp"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        app:flexWrap="wrap"
        app:justifyContent="space_between"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:toggle_requiredAmount="0"
        app:toggle_selectableAmount="2">

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/sound"
            android:layout_width="50dp"
            android:layout_height="180dp"
            app:layout_flexGrow="1"
            app:toggle_icon="@drawable/baseline_volume_off_24"
            app:toggle_iconGravity="top|center"
            app:toggle_iconPaddingHorizontal="15dp"
            app:toggle_iconPaddingTop="15dp"
            app:toggle_selectedBackgroundColor="#5e6fed"
            app:toggle_selectedIcon="@drawable/baseline_volume_up_24"
            app:toggle_selectedTextColor="@android:color/white"
            app:toggle_text="Sound Control"
            app:toggle_textGravity="bottom|center"
            app:toggle_textPaddingBottom="20dp"
            app:toggle_textSize="20dp" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/light"
            android:layout_width="50dp"
            android:layout_height="180dp"
            android:layout_marginLeft="-200dp"
            android:layout_marginTop="190dp"
            app:layout_flexGrow="1"
            app:toggle_icon="@drawable/baseline_lightbulb_24"
            app:toggle_iconGravity="top|center"
            app:toggle_iconPaddingHorizontal="15dp"
            app:toggle_iconPaddingTop="15dp"
            app:toggle_selectedBackgroundColor="#5e6fed"
            app:toggle_selectedIcon="@drawable/baseline_lightbulbl_24"
            app:toggle_selectedTextColor="@android:color/white"
            app:toggle_text="Light Control"
            app:toggle_textGravity="bottom|center"
            app:toggle_textPaddingBottom="20dp"
            app:toggle_textSize="21dp"

            />


    </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btn1"
            android:layout_width="73dp"
            android:layout_height="58dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="2dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toStartOf="@+id/btn2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_video_camera_back_24" />

        <ImageButton
            android:id="@+id/btn2"
            android:layout_width="74dp"
            android:layout_height="58dp"
            android:layout_marginStart="168dp"
            android:layout_marginBottom="2dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.428"
            app:srcCompat="@drawable/baseline_app_settings_alt_24" />

        <ImageButton
            android:id="@+id/btn3"
            android:layout_width="74dp"
            android:layout_height="58dp"
            android:layout_marginStart="79dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="2dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_account_circle_24" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:text="Home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:text="Search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="102dp"
            android:layout_marginEnd="25dp"
            android:text="Account"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>